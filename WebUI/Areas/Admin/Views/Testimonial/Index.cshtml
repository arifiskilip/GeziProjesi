@using Entities.Cocnrete
@model List<Testimonial>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <h5 class="card-header">Mesajlar</h5>
    <div class="table-responsive text-nowrap">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Ad Soyad</th>
                    <th></th>
                    <th>Mesaj</th>
                    <th>Durum</th>
                    <th></th>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">
                @foreach (var item in Model)
                {
                    <tr>
                        <td><i class="fab fa-react fa-lg text-info me-3"></i> <strong>@item.AppUser.FirstName @item.AppUser.LastName</strong></td>
                        <td>
                            <ul class="list-unstyled users-list m-0 avatar-group d-flex align-items-center">
                                <li data-bs-toggle="tooltip"
                                data-popup="tooltip-custom"
                                data-bs-placement="top"
                                class="avatar avatar-xs pull-up"
                                title="@item.AppUser.FirstName">
                                    <img src="@item.AppUser.ImageUrl" alt="Avatar" class="rounded-circle" />
                                </li>
                            </ul>
                        </td>
                        <td>
                            @item.Comment
                        </td>
                        <td>
                            @if (item.Status)
                            {
                                <span class="badge bg-label-success me-1">Aktif</span>
                            }
                            else
                            {
                                <span class="badge bg-label-warning me-1">Pasif</span>
                            }
                        </td>
                        <td>
                            <div class="dropdown">
                                <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                    <i class="bx bx-dots-vertical-rounded"></i>
                                </button>

                                <div class="dropdown-menu">
                                    <a class="dropdown-item" href="/Admin/Comment/Delete/@item.Id"><i class="bx bx-trash me-1"></i> Sil</a>
                                    @if (item.Status)
                                    {
                                        <a class="dropdown-item" href="/Admin/Testimonial/DeactivateTestimonial/@item.Id"><i class=""></i> Pasif Yap</a>
                                    }
                                    else
                                    {
                                        <a class="dropdown-item" href="/Admin/Testimonial/ActivateTestimonial/@item.Id"><i class=""></i> Aktif Yap</a>
                                    }
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

