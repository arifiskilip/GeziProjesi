@using Entities.Cocnrete
@model Reservation

@{
    ViewData["Title"] = "EditReservation";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <div class="card-body">
        <h4 class="card-title">Rota Güncelle</h4>
        <form class="forms-sample" method="post" enctype="multipart/form-data">
            <input type="hidden" asp-for="AppUserId" />
            <input type="hidden" asp-for="Description" />
            <input type="hidden" asp-for="Status" />
            <div class="form-group">
                @Html.Label("Rota")
                @Html.DropDownListFor(x =>x.DestinationId, (List<SelectListItem>)ViewBag.values,
                new {@class="form-control"})
            </div>
            <div class="form-group">
                @Html.Label("Tarih")
                <input class="form-control"
                       type="datetime-local"
                       asp-for="ReservationDate" />
            </div>
            <div class="form-group">
                @Html.Label("Kişi Sayısı")
                <input type="text" asp-for="PersonCount" class="form-control" />
            </div>
            <div class="form-group">
                @Html.Label("Ücret")
                <input type="text" asp-for="TotalPrice" class="form-control" />
            </div>
            <br />
            <div class="form-group">
                <button type="submit" class="btn btn-primary mr-2">Güncelle</button>
            </div>
        </form>
    </div>
</div>


