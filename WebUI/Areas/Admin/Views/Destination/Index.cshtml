@using Entities.Cocnrete
@model List<Destination>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card">
    <h5 class="card-header">Rota Bilgisi</h5>
    <div class="table-responsive text-nowrap">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Şehir</th>
                    <th>Fiyat</th>
                    <th>Kapasite</th>
                    <th>Resim</th>
                    <th>Durum</th>
                    <th></th>
                    <th></th>
                </tr>
            </thead>
            <tbody class="table-border-bottom-0">
                @foreach (var item in Model)
                {
                    <tr>
                        <td><i class="fab fa-react fa-lg text-info me-3"></i> <strong>@item.City</strong></td>
                        <td>@item.Price</td>
                        <td>
                            @item.Capacity
                        </td>
                        <td>
                            <ul class="list-unstyled users-list m-0 avatar-group d-flex align-items-center">
                                <li data-bs-toggle="tooltip"
                                data-popup="tooltip-custom"
                                data-bs-placement="top"
                                class="avatar avatar-xs pull-up"
                                title="@item.City">
                                    <img src="@item.Image" alt="Avatar" class="rounded-circle" />
                                </li>
                            </ul>
                        </td>
                        <td>
                            @if (item.Status)
                            {
                                <span class="badge bg-label-success me-1">Aktif</span>
                            }
                            else
                            {
                                <span class="badge bg-label-warning me-1">Pasif</span>
                            }
                        </td>
                        <td>
                            <a href="/Destination/Index"><input type="button" onclick="" class="btn btn-outline-primary" value="Sitede Gör"></a>
                        </td>
                        <td>
                            <div class="dropdown">
                                <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                    <i class="bx bx-dots-vertical-rounded"></i>
                                </button>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item" href="/Admin/Destination/Edit/@item.Id"><i class="bx bx-edit-alt me-1"></i> Düzenle</a>
                                    <a class="dropdown-item" href="/Admin/Destination/Delete/@item.Id"><i class="bx bx-trash me-1"></i> Sil</a>
                                    @if (item.Status)
                                    {
                                        <a class="dropdown-item" href="/Admin/Destination/DeactivateDestination/@item.Id"><i class=""></i> Pasif Yap</a>
                                    }
                                    else
                                    {
                                        <a class="dropdown-item" href="/Admin/Destination/AcvtivateDestination/@item.Id"><i class=""></i> Aktif Yap</a>
                                    }
                                </div>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
<a href="/Admin/Destination/Add"><button class="btn btn-success">Rota Ekle</button></a>
