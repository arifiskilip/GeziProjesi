@using Entities.Cocnrete
@model AppUser
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card mb-4">
    <h5 class="card-header">Profil Detayı</h5>
    <!-- Account -->
    <div class="card-body">
        <div class="d-flex align-items-start align-items-sm-center gap-4">
            <img src="@Model.ImageUrl"
                 alt="user-avatar"
                 class="d-block rounded"
                 height="100"
                 width="100"
                 id="uploadedAvatar" />
            <div class="button-wrapper">
                <label for="upload" class="btn btn-primary me-2 mb-4" tabindex="0">
                    <span class="d-none d-sm-block">Yeni Resim Ekle</span>
                    <i class="bx bx-upload d-block d-sm-none"></i>
                    <a href="/Admin/Profile/EditImage">
                        <input type="button"
                               id="upload"
                               class="account-file-input"
                               hidden />
                    </a>
                </label>
                <a href="/Admin/Profile/DeleteImage">
                    <button type="button" class="btn btn-outline-secondary account-image-reset mb-4">
                        <i class="bx bx-reset d-block d-sm-none"></i>
                        <span class="d-none d-sm-block">Resmi Sil</span>
                    </button>

                </a>


            </div>
        </div>
    </div>
    <hr class="my-0" />
    <div class="card-body">
        <form method="POST" asp-action="Index" asp-controller="Profile">
            <div class="row">
                <div class="mb-3 col-md-6">
                    <label for="firstName" class="form-label">Adınız</label>
                    <input class="form-control"
                           type="text"
                           id="firstName"
                           asp-for="FirstName" />

                </div>
                <div class="mb-3 col-md-6">
                    <label for="lastName" class="form-label">Soyadınız</label>
                    <input class="form-control" type="text" id="lastName" asp-for="LastName" />
                </div>
                <div class="mb-3 col-md-6">
                    <label for="email" class="form-label">E-mail</label>
                    <input class="form-control"
                           type="email"
                           id="email"
                           asp-for="Email"
                           placeholder="john.doe@example.com" />
                </div>
                <div class="mb-3 col-md-6">
                    <label class="form-label" for="phoneNumber">Telefon Numarası</label>
                    <div class="input-group input-group-merge">
                        <span class="input-group-text">TR (+90)</span>
                        <input type="text"
                               id="phoneNumber"
                               asp-for="PhoneNumber"
                               class="form-control"
                               placeholder="202 555 0111" />
                    </div>
                </div>
                <div class="mb-3 col-md-6">
                    <div class="form-group">
                        <label for="exampleSelectGender">Cinsiyet</label>
                        <select class="form-control" asp-for="Gender">
                            <option asp-for="Gender">Erkek</option>
                            <option asp-for="Gender">Kadın</option>
                        </select>
                    </div>
                </div>
            </div>
            <div class="mt-2">
                <button type="submit" class="btn btn-primary me-2">Değişikliği Kaydet</button>
            </div>
        </form>
    </div>
    <!-- /Account -->
</div>
