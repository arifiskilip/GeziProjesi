@using Entities.Cocnrete
@model List<Comment>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_MemberLayout.cshtml";
}

<div class="row ">
    <div class="col-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Order Status</h4>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th> </th>
                                <th> Rota Adı </th>
                                <th> Yorum Tarihi </th>
                                <th> Yorum </th>
                                <th> Durumu</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                           @foreach (var item in Model)
                            {
                                <tr>

                                    <td>
                                        <img src="@item.DestinationDetail.Destinations.Image" alt="image" />
                                        <span class="pl-2">@item.AppUser.FirstName @item.AppUser.LastName</span>
                                    </td>
                                    <td> <a href="/Destination/Detail/@item.DestinationDetail.DestinationId" target="_blank">@item.DestinationDetail.Destinations.City</a> </td>
                                    <td> @item.CommentDate </td>
                                    <td> @item.CommentDetail </td>
                                    <td>  @if (item.Status)
                                        {
                                            <div class="badge badge-outline-success">Etkin</div>
                                        }
                                        else
                                        {
                                             <div class="badge badge-outline-danger">Pasif</div>
                                        }
                                    </td>
                                    <td> <a href="/Member/Comment/Delete/@item.Id"> <input class="btn btn-danger" value="Yorumu Sil" /></a> </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

