@using WebUI.Models
@model MainModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_DefaultLayout.cshtml";
}

<section class="w3l-about-breadcrumb text-left">
    <div class="breadcrumb-bg breadcrumb-bg-about py-sm-5 py-4">
        <div class="container py-2">
            <h2 class="title">İletişim</h2>
            <ul class="breadcrumbs-custom-path mt-2">
                <li><a href="https://localhost:44393/">Ana Sayfa</a></li>
                <li class="active"><span class="fa fa-arrow-right mx-2" aria-hidden="true"></span> İletişim </li>
            </ul>
        </div>
    </div>
</section>
<!-- //about breadcrumb -->
<!-- contact-form -->
<section class="w3l-contact" id="contact">
    <div class="contact-infubd py-5">
        <div class="container py-lg-3">
            <div class="contact-grids row">
                <div class="col-lg-6 contact-left">
                    <div class="partners">
                        <div class="cont-details">
                            <h5>Hey sen!</h5>
                            <p class="mt-3 mb-4">
                                @Model.Contact.Description
                            </p>
                        </div>
                        <div class="hours">
                            <h6 class="mt-4">Email:</h6>
                            <p>
                                <a href="@Model.Contact.Email">
                                    @Model.Contact.Email
                                </a>
                            </p>
                            <h6 class="mt-4">Adres:</h6>
                            <p> @Model.Contact.Adress.</p>
                            <h6 class="mt-4">Contact:</h6>
                            <p class="margin-top"><a href="tel:+44-255-366-88">@Model.Contact.Phone</a></p>
                        </div>
                    </div>
                </div>
                @await Html.PartialAsync("~/Views/Message/AddMessagePartial.cshtml")

            </div>
            <div class="map mt-5 pt-md-5">
                <h5>Map</h5>
                <iframe src="@Model.Contact.MapLocation" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
            </div>
        </div>
</section>

