@using Entities.Cocnrete
@model Comment

<div class="leave-comment-form mt-5" id="reply">
    <h4 class="side-title mb-2">Yorum Yap</h4>
    <p class="mb-4">
        Sende düşüncellerini bizimle paylaş.
    </p>
    <form method="post" asp-controller="Comment" asp-action="AddComment">
        <div class="form-group">
            <input type="hidden" asp-for="DestinationDetailId" value="@TempData["id"]" />
        </div>
        <div class="form-group">

            <textarea class="form-control" placeholder="Yorum yap" asp-for="CommentDetail"
                      spellcheck="false"></textarea>
        </div>

        <div class="submit text-right">
            <button class="btn btn-style btn-primary">Yorum Yap </button>
        </div>
    </form>
</div>