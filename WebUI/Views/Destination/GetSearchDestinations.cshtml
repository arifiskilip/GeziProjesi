@using WebUI.Models
@model MainModel
@{
    ViewData["Title"] = "GetSearchDestinations";
    Layout = "~/Views/Shared/_DefaultLayout.cshtml";
}

<section class="w3l-about-breadcrumb text-left">
    <div class="breadcrumb-bg breadcrumb-bg-about py-sm-5 py-4">
      <div class="container">
        <h2 class="title">Rotalar</h2>
        <ul class="breadcrumbs-custom-path mt-2">
          <li><a href="/">Ana Sayfa</a></li>
          <li class="active"><span class="fa fa-arrow-right mx-2" aria-hidden="true"></span> Rotalar </li>
        </ul>
      </div>
    </div>
  </section>
<section class="w3l-pricinghny">
    <div class="pricing-inner-info py-5">
        <div class="container py-lg-4">
            <!--/pricing-info-grids-->
            @foreach (var item in Model.GetSearchDestinationsModel.Destinations)
            {
                <div class="pricing-info-grids">
                    <div class="price-box">
                        <div class="grid grid-column-2">
                            <div class="column pr-img-gd">
                                <h6 class="pricehead">
                                    <span class="fa fa-delicious mr-2" aria-hidden="true"></span> @item.City
                                </h6>
                            </div>
                            <div class="column text-lg-center">
                                <p class="price-title">@item.DayNight</p>
                            </div>
                            <div class="column price-number text-md-right">
                                <h3 class="pricing">
                                    <sup class="pri1">₺</sup>@item.Price<sup class="pri">00</sup>
                                </h3>
                                @if (User.Identity.IsAuthenticated)
                                {
                                    <a href="/Member/Destination/Index"><button class="btn btn-style btn-primary ml-         lg-3">Rezervasyon</button></a>
                                }
                                else
                                {
                                    <a href="/Login"><button class="btn btn-style btn-primary ml-         lg-3">Rezervasyon</button></a>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            }
            <!--/pricing-info-grids-->
        </div>
    </div>
</section>

